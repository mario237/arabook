<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/_2sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/storyCoverDraftCard"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ProgressBar
            android:id="@+id/loadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/storyCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"

            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/storyNameDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/storyCoverDraftCard"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_toEndOf="@id/storyCoverDraftCard"
        android:fontFamily="@font/baloo"
        android:textDirection="locale"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/storyTypeDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/storyNameDraft"
        android:layout_alignStart="@id/storyNameDraft"
        android:layout_marginTop="@dimen/_20sdp"
        android:textDirection="locale"
        android:layout_toEndOf="@id/storyCoverDraftCard"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_below="@id/storyCoverDraftCard"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/colorAccent" />

</RelativeLayout>